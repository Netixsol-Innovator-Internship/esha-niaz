        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "name", "value": "Darjeeling First Flush", "type": "text" },
            { "key": "description", "value": "A delicate black tea with floral and fruity notes from Darjeeling.", "type": "text" },
            { "key": "caffeine", "value": "Medium Caffeine", "type": "text" },
            { "key": "organic", "value": "true", "type": "text" },
            { "key": "stock", "value": "40", "type": "text" },
            { "key": "ingredients", "value": "[\"Darjeeling tea leaves\"]", "type": "text" },
            { "key": "variants", "value": "[{\"weight\":\"100g\",\"price\":9.99},{\"weight\":\"250g\",\"price\":19.99}]", "type": "text" },
            { "key": "steepingInstructions", "value": "{\"servingSize\":[\"1 tsp\"],\"temperature\":[\"95Â°C\"],\"time\":[\"3-4 min\"],\"colorNote\":[\"Golden\"]}", "type": "text" },
            { "key": "attributes", "value": "{\"flavor\":[\"Fruity\",\"Floral\"],\"origin\":[\"Darjeeling\"]}", "type": "text" },
