      }
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "price", "value": "250", "type": "text" },
            { "key": "image", "type": "file", "src": "C:/path/to/new-image.jpg" }
          ]
        },
        "url": {
          "raw": "http://localhost:3000/api/products/{{productId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/products/{{productId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "products", "{{productId}}"]
        }
      }
    }
  ]
},


{
